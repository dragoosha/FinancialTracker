<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DashboardTextViewLeft" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DashboardTextViewRight" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DashboardContainerView" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintWidth_percent">1</item>
        <item name="android:background">@drawable/background</item>
        <item name="layout_constraintHeight_percent">0.21</item>
    </style>

    <style name="DashboardContainerView.titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_top_dashboard</item>
    </style>

    <style name="DashboardContainerView.image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_between_dashboard</item>
    </style>

    <style name="DashboardContainerView.titleName">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">@dimen/margin_top_dashboard</item>
    </style>
    <style name="DashboardContainerView.titleSum">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DashboardContainerView.spinner">
        <item name="layout_constraintWidth_percent">0.4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_margin">@dimen/margin_top_dashboard</item>
    </style>
    <style name="DashboardContainerView.editTextSpinner">
        <item name="layout_constraintWidth_percent">0.35</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">15sp</item>
        <item name="android:hint">@string/hint_spinner</item>
        "
    </style>
</resources>