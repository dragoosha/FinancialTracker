            app:destination="@id/cardFragment" />
        <action
            android:id="@+id/action_navigation_dashboard_to_moneyboxFragment"
            app:destination="@id/moneyboxFragment" />
        <action
            android:id="@+id/action_navigation_dashboard_to_cashFragment"
            app:destination="@id/cashFragment" />
    </fragment>
    <fragment
