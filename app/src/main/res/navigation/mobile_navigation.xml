        tools:layout="@layout/fragment_card" />
    <fragment
        android:id="@+id/cashFragment"
        android:name="com.example.financialtracker.presentation.ui.dashboard.accounts.cash.CashFragment"
        android:label="fragment_cash"
        tools:layout="@layout/fragment_cash" />
    <fragment
        android:id="@+id/moneyboxFragment"
        android:name="com.example.financialtracker.presentation.ui.dashboard.accounts.moneybox.MoneyboxFragment"
        android:label="fragment_moneybox"
        tools:layout="@layout/fragment_moneybox" />

